{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "sourceMap": true,
    "outDir": "dist/test",
    "rootDir": ".",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*.ts",
    "**/__mocks__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
}
