    "react",
    "framework",
    "typescript",
    "dependency-injection",
    "decorators"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/nexus/tree/main/packages/core"
  },
  "bugs": {
    "url": "https://github.com/your-username/nexus/issues"
  },
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
