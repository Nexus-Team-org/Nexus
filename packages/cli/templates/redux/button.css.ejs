.okami-btn {
  padding: 0.5rem 1rem;
  border-radius: 0.25rem;
  font-weight: 500;
  cursor: pointer;
  border: none;
  transition: background 0.2s ease;
}

.okami-btn--default {
  background: #2563eb;
  color: #fff;
}
.okami-btn--default:hover {
  background: #1d4ed8;
}

.okami-btn--secondary {
  background: #64748b;
  color: #fff;
}
.okami-btn--secondary:hover {
  background: #475569;
}

.okami-btn--outline {
  background: transparent;
  border: 1px solid #cbd5e1;
  color: #334155;
}
.okami-btn--outline:hover {
  background: #f1f5f9;
}

.okami-btn--ghost {
  background: transparent;
  color: #334155;
}
.okami-btn--ghost:hover {
  background: #f1f5f9;
}

.okami-btn--destructive {
  background: #dc2626;
  color: #fff;
}
.okami-btn--destructive:hover {
  background: #b91c1c;
}
